{
  "manifest_version": 3,
  "name": "AI Video Publisher",
  "version": "1.0.0",
  "description": "AI驱动的视频自动发布工具，支持抖音和视频号平台",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "nativeMessaging",
    "webRequest",
    "debugger"
  ],
  "host_permissions": [
    "https://creator.douyin.com/*",
    "https://channels.weixin.qq.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://creator.douyin.com/*"],
      "js": ["content/douyin.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://channels.weixin.qq.com/*"],
      "js": ["content/weixin.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
